{
  "name": "timer-notes",
  "version": "1.0.0",
  "description": "A web-based note-taking application with time tracking and text comparison features",
  "main": "src/main.js",
  "scripts": {
    "start": "node start-with-backup.js",
    "start:claude": "python3 -m http.server 8002",
    "dev": "python3 -m http.server 8080",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css",
    "build:css:watch": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.5",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "diff": "^8.0.2"
  }
}
